<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GasApp.Views.RegistrationPage"
             xmlns:PanCake="clr-namespace:Xamarin.Forms.PancakeView;assembly=Xamarin.Forms.PancakeView"
             Title="Registration">
    <ContentPage.Content>
        <StackLayout>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*/2"/>
                </Grid.RowDefinitions>
            <StackLayout
                Grid.Row="0">
                    <PanCake:PancakeView
                        BackgroundGradientStartColor="#F97794"
                        BackgroundGradientEndColor="#43CBFF"
                        BackgroundGradientAngle="90"                                        
                        HeightRequest="200">                       
                    </PanCake:PancakeView>
                </StackLayout>
            <StackLayout
               Grid.Row="1"
               Margin="0,-130,0,0"
                VerticalOptions="FillAndExpand">
                    <PanCake:PancakeView
                        BackgroundGradientStartColor="#F97794"
                        BackgroundGradientEndColor="#f3f3f3"                                          
                        CornerRadius="50,50,50,50"                                                
                        VerticalOptions="CenterAndExpand"
                        HasShadow="True"
                        HeightRequest="540"
                        IsClippedToBounds="True">
                        <StackLayout>
                            <Label
                                HorizontalOptions="Start"
                                VerticalOptions="Center"
                                FontSize="25"
                                FontFamily="{StaticResource Etiqueta}"
                                Text="Usuario :"
                                TextColor="White"/>
                        </StackLayout>                        
                    </PanCake:PancakeView>
                </StackLayout>
            <StackLayout
                Grid.Row="2"
                Margin="0"
                Padding="5"
                HeightRequest="75"
                WidthRequest="150"
                VerticalOptions="End">
                <ImageButton
                    x:Name="btnSafe"
                    Aspect="AspectFit"
                    BackgroundColor="Transparent"
                    Command="{Binding ClicRegisterSafeCommand}"
                    HeightRequest="75"
                    WidthRequest="150"
                    FlexLayout.Grow="1"
                    Source="btnSafe.png"
                    VerticalOptions="End">
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="CommonStates">
                                <VisualState x:Name="Normal">
                                    <VisualState.Setters>
                                        <Setter Property="Scale" Value="1"/>
                                    </VisualState.Setters>
                                </VisualState>

                                <VisualState x:Name="Pressed">
                                    <VisualState.Setters>
                                        <Setter Property="Scale" Value="1.1"/>
                                    </VisualState.Setters>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>
                    </ImageButton>
            </StackLayout>
            </Grid>
        </StackLayout>        
    </ContentPage.Content>
</ContentPage>